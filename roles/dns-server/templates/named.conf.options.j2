options {
    directory "/var/cache/bind";

    recursion yes;
    allow-query { any; };
    allow-query-cache { any; };
    allow-recursion { any; };

    listen-on-v6 { any; };
    listen-on port 53 { any; };

    dnssec-enable yes;
    dnssec-validation no;

    forwarders {
        {{ open_dns_ip_1 }};
        {{ open_dns_ip_2 }};
    };

    auth-nxdomain no;
};