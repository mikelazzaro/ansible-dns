$TTL    5m
@   IN  SOA {{ hostname }}.global.corp.domain   root.{{ hostname }}.global.corp.domain. (
                            {{ ansible_date_time.epoch }}           ; Serial
                            {{ dns_param_refresh }}                 ; Refresh
                            {{ dns_param_expire }}                  ; Expire
                            {{ dns_param_negative_cache_ttl }}      ; Negative Cache TTL

@   IN  NS  {{ hostname }}.corp.domain.
@   IN  A   {{ ansible_default_ip4.address }}
@   IN  AAAA    ::1

{{ hostname }}.otg.localdomain. IN  A   {{ ansible_default_ipv4.address }}

api.corp.domain.                IN  A   {{ api_server_ip }}
media.corp.domain.              IN  A   {{ api_server_ip }}

{{ central_dns_hostname }}.     IN  A   {{ central_dns_ip }}