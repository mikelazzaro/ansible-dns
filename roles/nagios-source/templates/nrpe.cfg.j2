# LOG FACILITY
# The syslog facility that should be used for logging purposes.
log_facility=daemon

# PID FILE
pid_file=/var/run/nagios/nrpe.pid

# PORT NUMBER
server_port=5666

# NRPE USER
nrpe_user=nagios

# NRPE GROUP
nrpe_group=nagios

# ALLOWED HOST ADDRESSES
allowed_hosts=10.0.10.50,central-dns01.global.corp,10.0.0.5

# COMMAND ARGUMENT PROCESSING
dont_blame_nrpe=0

# BASH COMMAND SUBTITUTION
allow_bash_command_substitution=0

# DEBUGGING OPTION
debug=0

# COMMAND TIMEOUT
command_timeout=60

# CONNECTION TIMEOUT
connection_timeout=300

# Included config files & folders
include=/etc/nagios/nrpe_local.cfg
include_dir=/etc/nagios/nrpe.d/

